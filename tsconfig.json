{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "pretty": true,
    "experimentalSpecifierResolution": "node",
    "require": [
      "dotenv/config",
      "tsconfig-paths/register"
    ]
  }
}