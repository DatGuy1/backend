{
  "compilerOptions": {
    /* Basic Options */
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "types": ["node"],
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "pretty": true,
    "require": ["tsconfig-paths/register"],
    "ignore": ["(?:^|/)node_modules/", "(?:^|/)prisma/generated/"]
  }
}
