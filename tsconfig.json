{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./",
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "./src/types"
    ],
    "types": [
      "node"
    ],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": [
      "dotenv/config",
      "tsconfig-paths/register"
    ]
  }
}