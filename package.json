{
  "name": "dotabod",
  "private": true,
  "workspaces": [
    "packages/prisma",
    "packages/settings",
    "packages/twitch/events",
    "packages/twitch/chat",
    "packages/dota"
  ],
  "scripts": {
    "up": "yarn upgrade-interactive --latest",
    "studio": "doppler run -- yarn prisma studio --schema ./packages/prisma/postgres.prisma",
    "build": "yarn workspaces run build",
    "lint": "yarn eslint -- . && yarn prettier -- . && echo 'Linting complete.'",
    "prettier": "prettier --write",
    "eslint": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx",
    "update-np": "doppler run -- bash ../services/mongodb/updatenps.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "4.11.0",
    "@supabase/supabase-js": "^2.10.0",
    "@twurple/api": "6.0.8",
    "@twurple/auth": "6.0.8",
    "@twurple/chat": "6.0.8",
    "i18next": "^22.4.11",
    "i18next-fs-backend": "^2.1.1",
    "socket.io": "^4.6.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/node": "^18.15.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|json|css|md)": [
      "yarn prettier"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "yarn eslint"
    ]
  }
}
